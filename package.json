{
  "name": "nginx-conf-formatter",
  "version": "0.1.0",
  "description": "Format nginx configuration files",
  "keywords": [],
  "license": "MIT",
  "repository": "",
  "scripts": {
    "start": "babel-node -x \".ts\" src/index.ts",
    "watch": "concurrently 'npm run watch:types' 'npm run watch:js'",
    "test": "mocha",
    "bundle": "rollup -c",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "watch:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "mocha": "^10.0.0",
    "rollup": "^2.77.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "chevrotain": "^10.1.2"
  }
}
